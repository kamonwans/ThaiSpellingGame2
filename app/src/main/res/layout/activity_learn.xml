<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_learn_use_everyday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e7d6cf"
            android:text="คำศัพท์ที่ใช้ในชีวิตประจำวัน" />

        <Button
            android:id="@+id/btn_learn_transliterate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#bbb4aa"
            android:text="คำทับศัพท์" />

        <Button
            android:id="@+id/btn_learn_royal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e08b6e"
            android:text="คำราชาศัพท์" />
    </LinearLayout>
</LinearLayout>